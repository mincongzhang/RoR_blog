<h1>List of articles</h1>

<%= link_to 'New article button', new_article_path  %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td> <%= article.title %> </td>
      <td> <%= article.text %> </td>
      <td><%= link_to 'Show button', article_path(article) %></td>
      <td><%= link_to 'Edit button', edit_article_path(article) %></td>
      <td><%= link_to 'delete button', article_path(article), method: :delete, data: {confirm: 'Delete this article, sure?'}  %></td>
    </tr>
  <% end %>
</table>

